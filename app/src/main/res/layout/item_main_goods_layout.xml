<?xml version="1.0" encoding="utf-8"?>
<com.gongwu.wherecollect.view.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/goods_content_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/item_goods_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip_90"
        android:background="@color/white"
        android:orientation="horizontal">

        <com.gongwu.wherecollect.view.GoodsImageView
            android:id="@+id/main_goods_img_view"
            android:layout_width="@dimen/dip_68"
            android:layout_height="@dimen/dip_68"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dip_10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dip_10"
            android:layout_toEndOf="@id/main_goods_img_view"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textColor="@color/act_relation_goods_text_color"
                android:textSize="@dimen/f_15"
                tools:text="一个不怎么常用的杯子" />

            <TextView
                android:id="@+id/location_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip_4"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/act_relation_goods_text_hint_color"
                android:textSize="@dimen/f_12"
                tools:text="客厅/茶几/左2" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dip_24"
            android:background="@color/split_color" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_goods_delete_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_goods_delete"
            android:drawablePadding="@dimen/dip_6"
            android:gravity="center"
            android:text="@string/delete_text"
            android:textColor="@color/color333"
            android:textSize="@dimen/f_12" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="@dimen/dip_30"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/item_goods_location_add_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_goods_location_add"
            android:drawablePadding="@dimen/dip_6"
            android:gravity="center"
            android:text="@string/goods_add_location"
            android:textColor="@color/color333"
            android:textSize="@dimen/f_12" />

        <TextView
            android:id="@+id/item_goods_location_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_goods_location"
            android:drawablePadding="@dimen/dip_6"
            android:gravity="center"
            android:text="@string/goods_location"
            android:textColor="@color/color333"
            android:textSize="@dimen/f_12"
            android:visibility="gone" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="@dimen/dip_30"
            android:background="@color/divider" />

        <TextView
            android:id="@+id/item_goods_lock_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_goods_lock"
            android:drawablePadding="@dimen/dip_6"
            android:gravity="center"
            android:text="@string/goods_lock"
            android:textColor="@color/color333"
            android:textSize="@dimen/f_12" />

        <TextView
            android:id="@+id/item_goods_unlock_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_goods_unlock"
            android:drawablePadding="@dimen/dip_6"
            android:gravity="center"
            android:text="@string/goods_unlock"
            android:textColor="@color/color333"
            android:textSize="@dimen/f_12"
            android:visibility="gone" />
    </LinearLayout>
</com.gongwu.wherecollect.view.SwipeMenuLayout>